{
  "name": "Fluxo de Caixa - Dark Finance Dashboard",
  "version": "1.0.0",
  "theme": "dark",

  "colors": {
    "background": {
      "primary": "#0a0a0f",
      "secondary": "#12121a",
      "card": "#1a1a24",
      "cardHover": "#22222e",
      "input": "#12121a"
    },
    "border": {
      "default": "#2a2a3a",
      "light": "#1f1f2e"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#8b8b9e",
      "muted": "#5a5a6e"
    },
    "accent": {
      "primary": "#6366f1",
      "primaryHover": "#818cf8",
      "secondary": "#22d3ee"
    },
    "status": {
      "success": "#22c55e",
      "successBg": "rgba(34, 197, 94, 0.1)",
      "danger": "#ef4444",
      "dangerBg": "rgba(239, 68, 68, 0.1)",
      "warning": "#f59e0b",
      "warningBg": "rgba(245, 158, 11, 0.1)"
    },
    "sidebar": {
      "background": "#0f0f15",
      "itemHover": "#1a1a24",
      "itemActive": "#6366f1"
    }
  },

  "typography": {
    "fontFamily": {
      "sans": "Inter, system-ui, -apple-system, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },

  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem"
  },

  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px rgba(0, 0, 0, 0.3)",
    "md": "0 4px 6px rgba(0, 0, 0, 0.4)",
    "lg": "0 10px 15px rgba(0, 0, 0, 0.5)",
    "glow": "0 0 20px rgba(99, 102, 241, 0.3)"
  },

  "components": {
    "sidebar": {
      "width": "280px",
      "collapsedWidth": "80px",
      "padding": "1.5rem",
      "itemPadding": "0.75rem 1rem",
      "itemRadius": "0.5rem",
      "iconSize": "20px"
    },
    "card": {
      "padding": "1.5rem",
      "radius": "1rem",
      "border": "1px solid #2a2a3a"
    },
    "button": {
      "primary": {
        "background": "#6366f1",
        "hoverBackground": "#818cf8",
        "text": "#ffffff",
        "padding": "0.625rem 1.25rem",
        "radius": "0.5rem"
      },
      "secondary": {
        "background": "transparent",
        "border": "1px solid #2a2a3a",
        "hoverBackground": "#1a1a24",
        "text": "#ffffff",
        "padding": "0.625rem 1.25rem",
        "radius": "0.5rem"
      },
      "danger": {
        "background": "#ef4444",
        "hoverBackground": "#dc2626",
        "text": "#ffffff",
        "padding": "0.625rem 1.25rem",
        "radius": "0.5rem"
      }
    },
    "input": {
      "background": "#12121a",
      "border": "1px solid #2a2a3a",
      "focusBorder": "#6366f1",
      "radius": "0.5rem",
      "padding": "0.625rem 1rem",
      "text": "#ffffff",
      "placeholder": "#5a5a6e"
    },
    "table": {
      "headerBackground": "#12121a",
      "rowHover": "#1a1a24",
      "border": "#2a2a3a"
    },
    "modal": {
      "background": "#1a1a24",
      "overlay": "rgba(0, 0, 0, 0.7)",
      "radius": "1rem",
      "padding": "1.5rem"
    },
    "badge": {
      "success": {
        "background": "rgba(34, 197, 94, 0.1)",
        "text": "#22c55e",
        "border": "rgba(34, 197, 94, 0.2)"
      },
      "danger": {
        "background": "rgba(239, 68, 68, 0.1)",
        "text": "#ef4444",
        "border": "rgba(239, 68, 68, 0.2)"
      }
    },
    "statsCard": {
      "padding": "1.5rem",
      "iconSize": "48px",
      "iconRadius": "0.75rem"
    }
  },

  "layout": {
    "maxWidth": "1400px",
    "contentPadding": "2rem",
    "gridGap": "1.5rem",
    "sectionGap": "2rem"
  },

  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
  }
}
